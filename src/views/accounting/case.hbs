<div class="container marketing">
  <div class="row">
    {{> sid-accounting}}
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">

      <h1>Contabilidad</h1>
      <div class="row">
        {{#each groups}}
        <div class="col-md-3">
          <p>
            <div class="card">
              <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                  {{nombre}}                 
                </h4>
                <button type="button" class="btn btn-outline-success btn-block" data-toggle="modal" data-target="#creaFolderModal{{id}}">
                  Crear carpeta
                </button>
              </div>   
            </div>
          </p>
        </div>

        {{!-- Modal para crear carpetas --}}
        <div class="modal fade" id="creaFolderModal{{id}}" tabindex="-1" role="dialog" aria-labelledby="creaFolderModalLabel" aria-hidden="true">
          <div class="modal-dialog modal-sm" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="creaFolderModalLabel">Crear Folder</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <form action="/accounting/folder-new/{{_id}}" method="POST">
                  <div class="form-group">
                    <input type="text" class="form-control" name="nombre" placeholder="Nombre de la carpeta">
                  </div>
                  <div style="text-align: right">
                    <button type="submit" class="btn btn-primary">Crear</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
        <div class="col-md-3">
          <p>
            <div class="card">
              <div class="card-body">
                <form action="/accounting/group-new" method="POST">
                  <div class="form-group">
                    <textarea class="form-control" name="nombre" placeholder="Nombre de la Carpeta"></textarea>
                  </div>
                  <button type="submit" class="btn btn-outline-primary btn-block btn-sm">Crear Grupo</button>
                </form>
              </div>   
            </div>
          </p>
        </div>
      </div>
    </main> 
  </div>
</div>

