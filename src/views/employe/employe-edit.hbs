<div class="container marketing mt-4">
  <div class="row">
      {{> sid-employe}}
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h3>Editar Datos</h3>
                </div>
                <div class="card-body">
                    <form action="/employe/employe-edit/{{employe._id}}?_method=PUT" method="POST">
                        <input type="hidden" name="_method" value="PUT">
                        <div class="form-group">
                            <input type="text" name="ruc" class="form-control" placeholder="RUC" value="{{employe.ruc}}" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="email" name="email" class="form-control" placeholder="E-mail" value="{{employe.email}}">
                        </div>
                        <div class="form-group">
                            <input type="date" name="cumple" class="form-control" placeholder="Cumpleaños" value="{{employe.ecumple}}" title="Fecha de nacimiento">
                        </div>
                        <div class="form-group">
                            <input type="text" name="profesion" class="form-control" placeholder="Profesión" value="{{employe.profesion}}">
                        </div>
                        <div class="form-group">
                            <input type="text" name="area" class="form-control" placeholder="Area" value="{{employe.area}}">
                        </div>
                        <div class="form-group">
                            <input type="text" name="cargo" class="form-control" placeholder="Cargo" value="{{employe.cargo}}">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary btn-block" type="submit">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main> 
  </div>
</div>
