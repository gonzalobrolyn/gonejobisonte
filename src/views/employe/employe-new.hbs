<div class="container marketing mt-4">
  <div class="row">
      {{> sid-employe}}
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
        <div class="col-md-5 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h3>Agregar Empleado</h3>
                </div>
                <div class="card-body">
                    <form action="/employe/employe-new/{{person._id}}" method="POST">
                        <div class="form-group">
                            <input type="text" name="namePerson" class="form-control" value="{{person.nombre}} {{person.apellido}}" disabled>
                        </div>
                        <div class="form-group">
                            <input type="text" name="ruc" class="form-control" placeholder="RUC" value="{{ruc}}" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="email" name="email" class="form-control" placeholder="E-mail" value="{{email}}">
                        </div>
                        <div class="form-group">
                            <input type="date" name="cumple" class="form-control" placeholder="Cumpleaños" value="{{cumple}}" title="Fecha de nacimiento">
                        </div>
                        <div class="form-group">
                            <input type="text" name="profesion" class="form-control" placeholder="Profesión" value="{{profesion}}">
                        </div>
                        <div class="form-group">
                            <input type="text" name="area" class="form-control" placeholder="Area" value="{{area}}">
                        </div>
                        <div class="form-group">
                            <input type="text" name="cargo" class="form-control" placeholder="Cargo" value="{{cargo}}">
                        </div>
                        <div class="form-group" style="text-align: center">
                            <input class="btn btn-outline-info" type="reset" value="Limpiar">
                            <button class="btn btn-primary" type="submit">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main> 
  </div>
</div>
