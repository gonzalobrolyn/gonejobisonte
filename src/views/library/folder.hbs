<div class="container marketing">
  <div class="row">
    {{>sid-library}}
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
        
        <div class="row">
          <div class="col-sm-3">
            <p>
              <button type="button" class="btn btn-primary btn-block" data-toggle="modal" data-target="#modalSubirDoc">
                Subir Documento 
              </button>
            </p>
          </div>
          <div class="col-sm-3">
            <p>
              <a href="/library/work/{{folder.obra}}" class="btn btn-primary btn-block">
                Volver a Obra 
              </a>
            </p>
          </div>
          
          </div>
            <h3>Documentos en carpeta: {{folder.nombre}}</h3>
          <div class="row">
          {{#each documents}}
            <div class="col-sm-3">
              <p>
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title">{{asunto}}</h5>
                    <p>{{referencia}}</p>
                    <p>{{emisor}}</p>
                    <a href="{{path}}" target="_blank" class="btn btn-primary btn-sm btn-block">Ver</a>
                  </div>
                </div>
              </p>
            </div>
          {{/each}}
        </div>
    </main>
  </div>

</div>
