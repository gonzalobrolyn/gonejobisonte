<div class="container marketing mt-4">
  <div class="row">
    {{> sid-purchase}}
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
      <h1>Productos</h1>
      {{#if product}}
      <div class="table-responsive">
        <table class="table table-bordered table-hover" style="background-color: white">
          <thead>
            <tr>
              <th>Codigo</th>
              <th>Producto</th>
              <th>Descripci√≥n</th>
            </tr>
          </thead>  
          {{#each product}}
            <tbody>
              <tr>
                <td>
                  <a href="#">{{codigo}}</a>
                </td>
                <td>{{nombre}}</td>
                <td>{{detalle}}</td>
              </tr>
            </tbody>
          {{/each}}
        </table>

      </div>
      {{else}}
        <div class="row">
          <div class="card mx-auto">
            <div class="card-body">
              <p class="lead">No hay productos para listar.</p>
              <a href="/purchase/product-new" class="btn btn-success btn-block">Registrar un producto.</a>
            </div>
          </div>
        </div>
      {{/if}}
    </main> 
  </div>
</div>