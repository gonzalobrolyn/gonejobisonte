<div class="container marketing mt-4">
    <div class="row">
        {{> sid-users}}
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
        <div class="col-md-5 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h2>Registro de Usuario</h2>
                </div>
                <div class="card-body">
                    <form action="/users/signup/{{employe._id}}" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="nombre" value="{{person.nombre}} {{person.apellido}}" disabled>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="email" value="{{employe.email}}" disabled>
                        </div>                        
                        <div class="form-group">
                            <select name="role" class="form-control">
                                <option value="A">Selecciona un Rol</option>
                                <option value="Expert">Especialista</option>
                                <option value="Admin">Administrador</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="name" placeholder="Usuario" value="{{name}}">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" name="password" placeholder="Password" value="{{password}}">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" name="confirm_password" placeholder="Password" value="{{confirm_password}}">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-block btn-primary">
                                Registrar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        </main>
    </div>
</div>
