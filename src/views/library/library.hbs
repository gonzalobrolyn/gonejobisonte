<div class="container marketing mt-4">
  <div class="row">
    {{> sid-library}}
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
       <h1>Biblioteca</h1>
       <div class="row">
        {{#each work}}
          <div class="col-md-6">
            <p>
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{descripcion}} Snip: {{snip}}
                  </h4>
                  <p>Nombre de la entidad: {{entidad}}</p>
                  <p>{{numero}}</p>
                  <P>Valor Referencial: S/ {{valor}} Soles</P>
                  <a href="/library/work/{{_id}}" class="btn btn-info btn-block btn-sm">
                    VER
                  </a>
                </div>   
              </div>
            </p>
          </div>
        {{else}}
          <div class="card mx-auto">
            <div class="card-body">
              <p class="lead">No hay obras archivadas.</p>
            </div>
          </div>
        {{/each}}
      </div>
    </main> 
  </div>
</div>