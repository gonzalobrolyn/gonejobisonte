<div class="container marketing mt-4">
  <div class="row">
      {{> sid-manage}}
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
        <div class="col-md-6 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>Información de Empresa</h3>
                </div>
                <div class="card-body">
                    <form action="/manage/new-company" method="POST">
                        <div class="form-group">
                            <input type="text" name="razon" class="form-control" placeholder="Razon Social" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="ruc" class="form-control" placeholder="RUC">
                        </div>
                        <div class="form-group">
                            <input type="text" name="direccion" class="form-control" placeholder="Dirección">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary btn-block" type="submit">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main> 
  </div>
</div>
