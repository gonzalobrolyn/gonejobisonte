<div class="container marketing mt-4">
  <div class="row">
    {{> sid-manage}}
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
      {{#if company}}
        <div class="jumbotron">
          <h1 class="display-4" style="text-align: center">{{company.razon}}</h1>
          <hr class="my-4">
          <p>{{company.ruc}}</p>
          <p>{{company.direccion}}</p>
          <div class="row" style="text-align: center">
            <div class="col-sm-6">
              <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#creaFolderModal">
                Crear carpeta
              </button>
            </div>
            <div class="col-sm-6">
              <a href="/manage/edit/{{company._id}}" class="btn btn-outline-primary">
                Editar información
              </a>
            </div>
          </div>
        </div>

        {{!-- Modal para crear carpetas --}}
        <div class="modal fade" id="creaFolderModal" tabindex="-1" role="dialog" aria-labelledby="creaFolderModalLabel" aria-hidden="true">
          <div class="modal-dialog modal-sm" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="creaFolderModalLabel">Crear Folder</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <form action="/manage/folder-new/{{company._id}}" method="POST">
                  <div class="form-group">
                    <input type="text" class="form-control" name="nombre" placeholder="Nombre de la carpeta">
                  </div>
                  <div style="text-align: right">
                    <button type="submit" class="btn btn-primary">Crear</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>

      {{else}}
        <div class="card mx-auto">
          <div class="card-body">
            <p class="lead">No hay información de la empresa.</p>
            <a href="/manage/origin" class="btn btn-outline-success btn-block">Agregar información.</a>
          </div>
        </div>
      {{/if}}
    </main>
  </div>

  
</div>