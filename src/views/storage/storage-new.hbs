<div class="container marketing mt-4">
  <div class="row">
      {{> sid-storage}}
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
        <div class="col-md-6 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h3>Nuevo almacen</h3>
                </div>
                <div class="card-body">
                    <form action="/storage/storage-new" method="POST">
                        <div class="form-group">
                            <input type="text" name="direccion" class="form-control" placeholder="DirecciÃ³n" autofocus>
                        </div>
                        <div class="form-group">
                            <select name="obra" class="form-control">
                            <option value="A">Seleccione una Obra</option>
                            {{#each works}}
                            <option value="{{id}}">{{numero}}</option>
                            {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                            <select name="encargado" class="form-control">
                            <option value="A">Seleccione una Responsable</option>
                            {{#each employes}}
                            <option value="{{id}}">{{persona.nombre}} {{persona.apellido}}</option>
                            {{/each}}
                            </select>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-primary btn-block" type="submit">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main> 
  </div>
</div>
